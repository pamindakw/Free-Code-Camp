extends components/layout

block append styles
    //- profile.css
    link(rel="stylesheet", type="text/css", href="../../styles/profile.css")

block content
    //- - var userData = user
    .d-flex.justify-content-center
        h1= welcome
    br
    #profileHero.d-flex.flex-column.align-items-center
        .d-flex.justify-content-center
            ul
                li Polls: #{user.polls}
                li Times Voted: #{user.timesVoted}
    br
    if(user.polls == 0)
        p.d-flex.justify-content-center You haven't created any polls yet!
    else
        p.d-flex.justify-content-center some voting content
    br
    .d-inline-flex.justify-content-center
        a(href="/user/dashboard")
            button.d-flex.justify-content-center.align-items-center.home-button.btn.btn-primary Dashboard
        a(href="/user/profile")
            button.d-flex.justify-content-center.align-items-center.home-button.btn.btn-primary Profile